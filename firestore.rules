rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() { return request.auth != null; }
    function isUser(userId) { return isAuthenticated() && request.auth.uid == userId; }
    function isSuperAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    // Users: self or super admin
    match /users/{userId} {
      allow read, write: if isUser(userId) || isSuperAdmin();
    }

    // App settings: only super admin
    match /appSettings/adminControls {
      allow read, write: if isSuperAdmin();
    }

    // Savings accounts
    match /savingsAccounts/{accountId} {
      function isOwner() { return isAuthenticated() && resource.data.owner == request.auth.uid; }
      function isMember() { return isAuthenticated() && request.auth.uid in resource.data.members; }

      allow read: if isSuperAdmin() || isOwner() || isMember();
      allow create: if isAuthenticated() && request.resource.data.owner == request.auth.uid;
      allow update, delete: if isSuperAdmin() || isOwner();
    }

    // Invites
    match /invites/{inviteId} {
      allow create: if isAuthenticated();
      allow read: if isSuperAdmin() || (
        isAuthenticated() && (
          get(/databases/$(database)/documents/savingsAccounts/$(resource.data.accountId)).data.owner == request.auth.uid
          || request.auth.token.email == resource.data.sentToEmail
        )
      );
      allow update, delete: if isSuperAdmin() || (
        isAuthenticated() && (
          request.auth.token.email == resource.data.sentToEmail ||
          get(/databases/$(database)/documents/savingsAccounts/$(resource.data.accountId)).data.owner == request.auth.uid
        )
      );
    }
  }
}